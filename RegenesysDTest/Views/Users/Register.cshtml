@model RegenesysDTest.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var year = "";
        var month = "";
        var day = "";
        var dob = "";
        var nationality = "";
        var idNumber = "";
        $("#nationality").blur(function () {
            nationality = $("#nationality").val();
            if (nationality == "South Africa")
            {
                $("#idNumber").attr('minlength', '13');
                $("#idNumber").attr('maxlength', '13');

            }

        });

        $("#nationality").change(function () {
           
                $("#idNumber").val("");
                $("#dob").val("")
        });

        $("#idNumber").blur(function () {
           
            if (nationality == "South Africa") {
                idNumber = $("#idNumber").val();

                year = idNumber.substring(0, 2);
                month = idNumber.substring(2, 4);
                day = idNumber.substring(4, 6);

                dob = year.concat('/' + month, '/' + day);

                $("#dob").val(dob)
            }
            
        });
    });
</script>
<h2>Register</h2>

